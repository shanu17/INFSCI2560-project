        <header class="main-header">
            <% if(user) { %>
            <h1 class="band-name band-name-large"><%= user.name %></h1>
            <% } %>
        </header>
        <section class="container content-section">
            <h2 class="section-header">Food Items</h2>
            <div class="shop-items">
                <% for (var i = 0; i < data.length; i++) { %>
                <div class="shop-item">
                    <span class="shop-item-title"><%= data[i].name %></span>
                    <% let imageSrc = "/uploads/" + data[i].summary %>
                    <img class="shop-item-image" src= "<%= imageSrc %>">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$<%= data[i].price %></span>
                        <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                    </div>
                </div>
                <%  } %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$0</span>
            </div>
            <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
        </section>
        <!-- Footer -->
	<footer id="footer">
		<div class="container">
			<div class="row">
				<div class="col-lg-5 col-sm-4 col-xs-12 pull-right">
					<div class="basic_info">
						<a href=""><img class="footer_logo" src="/images/ClipartKey_1633604.png" alt="Food Express" /></a>
					</div>
				</div>                 
				<div class="col-lg-4 col-sm-4 col-xs-12 col-lg-offset-1 pull-right">
					<div class="contact_us">
						<h3 style="color: white;">Contact Us</h3>
						<a href="">info@foodexpress.com</a>
						<address>
							Walnut Street, Pittsburgh<br />
							PA 15221 <br />
							USA <br />
						</address>
					</div>
				</div>
				<div class="col-lg-3 col-sm-4 col-xs-12 col-lg-offset-1 pull-right">
					<div class="subscribe">
						<h3 style="color: white;">Subscribe now</h3>
						<p>Subscribe to the newsletter and get some crispy stuff every week.</p>
						<form role="form">
							<div class="form-group">
								<div class="input-group">
									<input type="email" class="form-control" id="em" placeholder="Enter your e-mail here">
									<span class="input-group-btn">
										<button type="submit" class="btn send_btn">
											<i class="glyphicon glyphicon-send"></i>
										</button>
									</span>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</footer>

    </body>
