        <header class="main-header">
            <% if(data) { %>
            <h1 class="band-name band-name-large"><%= user.name %></h1>
            <% } %>
        </header>
        <section class="container content-section">
            <h2 class="section-header">Food Items</h2>
            <% if (typeof(rest_id) !="undefined") {%>
            <h5 id="rest_id" hidden><%= rest_id %></h5>
            <% } %>
            <div class="shop-items">
                <% for (var i = 0; i < data.length; i++) { %>
                <div class="shop-item">
                    <span class="shop-item-title"><%= data[i].name %></span>
                    <% let imageSrc = "/uploads/" + data[i].summary %>
                    <img class="shop-item-image" src= "<%= imageSrc %>">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$<%= data[i].price %></span>
                        <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                    </div>
                </div>
                <%  } %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price" style="font-size: 20px; font-family: 'Times New Roman', Times, serif">$0</span>
            </div>
            <h2 class="section-header">CHECKOUT</h2>
            
            <form id="purchase-form">
                <div class="form-group">
                    <label class="cart-header" for="exampleInputEmail1">Debit/Credit Card Details</label>
                    <input type="text" class="form-control col-sm-6" id="ccn" placeholder="Enter your credit/debit card number" required>
                    <div class="input-group">
                        <input type="text" class="form-control col-sm-3" id="cvv" placeholder="Enter your CVV" required>
                        <input type="text" class="form-control col-sm-3" id="exp" placeholder="Enter your card expiry mm/yy" required>
                    </div>
                    <small id="ccdehlp" class="form-text text-muted">We'll never share your card details with anyone else.</small>
                </div>
                <button type="submit" class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
            </form>
        </section>
