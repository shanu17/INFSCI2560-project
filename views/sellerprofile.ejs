		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
	</head>
<body>
	<!-- Top Nav -->
	<nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
		<a class="navbar-brand" href="#">
			<img src="images/ClipartKey_1633604.png" style="width:30px; height:30px" class="d-inline-block align-top" alt="logo">
			Food Express
		  </a>
		<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb" aria-expanded="true">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div id="navb" class="navbar-collapse collapse hide">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="/">HOME</a>
				</li>
				<!-- <li class="nav-item">
					<a class="nav-link" href="#">ABOUT US</a>
				</li> -->
				<li class="nav-item">
					<a class="nav-link" href="#footer">CONTACT US</a>
				</li>
			</ul>
			<ul class="nav navbar-nav ml-auto">
				<li class="nav-item">
					<a class="nav-link"><span class="fas fa-user"></span><%= user.email %></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/profile"><span class="fas fa-sign-in-alt"></span>Profile</a>
				</li>
			</ul>
		  </div>
	</nav>

	<div class="container">

		<div class="page-header text-center">
			<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		</div>

		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-sm-6">
				<div class="well">
					<h3><span class="fa fa-user"></span> User Name</h3>
						<p>
							<strong>Email ID</strong>: <%= user.email %><br>
							<strong>Phone</strong>: <%= user.phone %><br>
							<strong>Address</strong>: <%= user.address %><br>
							<strong>Payment method</strong>: Payment<br>
							<strong>Past orders</strong>: Orders<br>
						</p>
				</div>
			</div>
		</div>
		<button type="button" class="btn btn-danger" href="/logout">Logout</button>
	</div>
