</head>
<body>
		<!-- Top Nav -->
		<nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
			<a class="navbar-brand" href="#"><b>Food Express</b></a>
			<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb" aria-expanded="true">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div id="navb" class="navbar-collapse collapse hide">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/">HOME</a>
					</li>
					<!-- <li class="nav-item">
						<a class="nav-link" href="#">ABOUT US</a>
					</li> -->
					<li class="nav-item">
						<a class="nav-link" href="#footer">CONTACT US</a>
					</li>
				</ul>
				<!-- <ul class="nav navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="/register"><span class="fas fa-user"></span> Sign Up</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/login"><span class="fas fa-sign-in-alt"></span> Login</a>
					</li>
				</ul> -->
			  </div>
		</nav>

		<% if (message.length > 0) { %>
			<div class="alert alert-danger text-center"><%= message %></div>
		<% } %>

	<div class="registration-form">
		<form action="/register_seller" method="POST" oninput='passwordConfirm.setCustomValidity(passwordConfirm.value != password.value ? "Passwords do not match." : "")'>
			<!-- <div>User Registeration</div> -->
			<h1 class="display-4" style="color: black; text-align: center;" >Restaurant Registeration</h1>
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
			</div>
			<div class="form-group">
                <input type="text" class="form-control item" id="restaurantname" name="restaurantname" placeholder="Restaurant Name">
			</div>
			<div class="form-group">
                <input type="text" class="form-control item" id="restcat" name="restcat" placeholder="Restaurant Category">
			</div>
            <div class="form-group">
                <input type="email" class="form-control item" id="email" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control item" minlength="8" id="password" name="password" placeholder="Password (8 characters minimum)">
			</div>
			<div class="form-group">
                <input type="password" class="form-control item" id="passwordConfirm" name="passwordConfirm" placeholder="Confirm Password">
			</div>
            <div class="form-group">
                <input type="text" class="form-control item" id="address" name="address" placeholder="Address">
			</div>
            <div class="form-group">
				<button type="submit" class="btn btn-block create-account">Register Restaurant</button>
            </div>
        </form>
        <div class="social-media">
            <h5>Already have an account? <a href="/Login">Login here</a></h5>
        </div>
    </div>
